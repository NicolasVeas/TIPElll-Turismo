<%- include ('partials-admin/_header-admin')  %>

    <!-- Sección del contenido (Cuerpo general) -->
    <div class="content">

        <div class="container-tabla">
            <h3 class="text-center">atractivos regionales</h3>
            <div class="busqueda">
                <input class="busqueda-input search" data-table="order-table" type="text" placeholder="Buscar...">
            </div>

            <table class="table order-table text-center">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Usuario  (Correo)</th>
                        <th>Título</th>
                        <th>Geolocalización</th>
                        <th>Telefono</th>
                        <th colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for(var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td> <%= data[i].id_atractivo %> </td>
                                <td> <%= data[i].correo || 'Desconocido' %> </td>
                                <td> <%= data[i].titulo %> </td>
                                <td> <%= data[i].geo_local %> </td>
                                <td> <%= data[i].telefono %> </td>
                                <td>
                                    <a href="/eliminar-atractivo-reg/<%= data[i].id_atractivo%>" class="boton eliminar">Eliminar</a>
                                </td>
                                <td>
                                    <a href="/modificar-atractivo-reg/<%= data[i].id_atractivo%>" class="boton actualizar">Modificar</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>    
        </div>

        <div class="container-form">
            <h3 class="text-center">Agregar un atractivo</h3>
            <form action="/agregar-atractivo" method="POST">
                <div class="datos">
                    <label>Título</label>
                    <div class="input-user">
                        <input class="text" type="text" name="titulo" placeholder="Título o nombre del lugar" required>
                    </div>
                </div>
                <div class="datos">
                    <label>Descripción o historia</label>
                    <div class="input-user">
                        <textarea class="text" name="descripcion" id="" placeholder="Escriba aqóí la descripción o historia completa del atractivo" required="required"></textarea >
                    </div>
                </div>
                <div class="datos">
                    <label>Geolocalización</label>
                    <div class="input-user">
                        <input class="text" type="text" name="geo_local" placeholder="Ingrese las coordenadas del lugar. ej:(0.1234,0.1234)" required>
                    </div>
                </div>
                <div class="datos">
                    <label>Teléfono</label>
                    <div class="input-user">
                        <input class="text" type="number" name="telefono" placeholder="Ingrese el teléfono de contacto" required>
                    </div>
                </div>
                <!-- <div class="datos">
                    <label>Agregue una imagen para el servivio.</label>
                    <div class="file">
                        <input class="file" type="file" placeholder="x" required>
                    </div>
                </div> -->  
                <div class="boton">
                    <button type="submit">Agregar servicio</button>
                </div>
            </form>
        </div>
            
    </div>

    <!-- Fin sección del contenido (Cuerpo general)  -->

<%- include ('partials-admin/_footer-admin')  %>