<%- include ('partials/_header')  %>

    <body>
        
        <!-- Inicio de sesión -->
        <header>
            <div class="center">
                <a href="" class="logo"><img class="img-fluid" src="/img/icon.png"/></a>
                <input type="checkbox" id="show">
                <label for="show" class="iniciar-btn">Iniciar sesión</label>
                <div class="container-log">
                    <label for="show" class="close-btn fas fa-times"></label>
                    <div class="text">Iniciar sesión</div>
                    <form action="#">
                        <div class="data">
                            <label>e-Mail</label>
                            <input type="text" required>
                        </div>
                        <div class="data">
                            <label>Contraseña</label>
                            <input type="text" required>
                        </div>
                        <div class="recuperarContra"><a href="#">Recuperar contraseña</a></div>
                        <div class="btn">
                            <div class="inner"></div>
                            <button type="submit">Ingresar</button>
                        </div>
                        <div class="registro"><a href="#">Crear una cuenta</a></div>
                    </form>
                </div>
            </div>
        </header>

        <!-- Barra de navegación -->
        <nav>
          <input type="checkbox" id="chk">
          <label for="chk" class="show-menu-btn"><i class="fas fa-bars"></i></label>
        
          <ul class="menu">
              <a href="">INICIO</a>
              <a href="#">SERVICIOS TURÍSTICOS</a>
              <a href="#">ATRACTIVOS TURÍSTICOS</a>
              <a href="#">ACTIVIDADES</a>
              <a href="#">NUESTRA CIUDAD</a>
              <label for="chk" class="hide-menu-btn"><i class="fas fa-times"></i></label>
          </ul>
      </nav>

        <!-- Sideshow de imagenes -->
        <section id="sideshow">
            <div class="slidershow middle">
                <div class="slides">
                  <input type="radio" name="r" id="r1" checked>
                  <input type="radio" name="r" id="r2">
                  <input type="radio" name="r" id="r3">
                  <input type="radio" name="r" id="r4">
                  <input type="radio" name="r" id="r5">
                  <div class="slide s1">
                    <img src="/img/4.jpg">
                  </div>
                  <div class="slide">
                    <img src="/img/2.jpg">
                  </div>
                  <div class="slide">
                    <img src="/img/3.jpg">
                  </div>
                  <div class="slide">
                    <img src="/img/4.jpg">
                  </div>
                  <div class="slide">
                    <img src="/img/5.jpg">
                  </div>
                </div>
          
                <div class="navigation">
                  <label for="r1" class="bar"></label>
                  <label for="r2" class="bar"></label>
                  <label for="r3" class="bar"></label>
                  <label for="r4" class="bar"></label>
                  <label for="r5" class="bar"></label>
                </div>
              </div>
        </section>

    </body>
</html>