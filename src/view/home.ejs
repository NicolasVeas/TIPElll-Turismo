<%- include ('partials-home/_header-home')  %>

    <section class="slideshow">
        <div class="slide-body">
            <input type="radio" id="i1" name="images" checked />
            <input type="radio" id="i2" name="images" />
            <input type="radio" id="i3" name="images" />
            <input type="radio" id="i4" name="images" />
            <input type="radio" id="i5" name="images" />	
            
            <div class="slide_img" id="one"> <img src="/img/home1."> </div>
            <div class="slide_img" id="two"> <img src="/img/home2.jpg"> </div>
            <div class="slide_img" id="three"> <img src="/img/home3.jpg"> </div>
            <div class="slide_img" id="four"> <img src="/img/home4.jpg"> </div>
            <div class="slide_img" id="five"> <img src="/img/home5.jpg"> </div>

            <div id="nav-slide">
                <label for="i1" class="dots" id="dot1"></label>
                <label for="i2" class="dots" id="dot2"></label>
                <label for="i3" class="dots" id="dot3"></label>
                <label for="i4" class="dots" id="dot4"></label>
                <label for="i5" class="dots" id="dot5"></label>
            </div>
        </div>
    </section>

    <section class="servicios">
        <div class="lista-servicios">
            <div class="one">
                <a class="category_img" category="Servicios Gastronómicos" >
                    <img class="foto" src="/img/icono-1.png" alt="Servicios Gastronómicos">
                    <div class="overlay overlayFade">
                        <div class="text-over">Servicios Gastronómicos</div>
                    </div>
                </a>
            </div>

            <div class="one">
                <a class="category_img" category="Alojamientos">
                    <img class="foto" src="/img/icono-2.png" alt="Alojamientos">
                    <div class="overlay overlayFade">
                        <div class="text-over">Alojamientos</div>
                    </div>
                </a>
            </div>

            <div class="one">
                <a class="category_img"  category="Agencias y TTOO" >
                    <img class="foto" src="/img/icono-3.png" alt="Agencias y TTOO">
                    <div class="overlay overlayFade">
                        <div class="text-over">Agencias y TTOO</div>
                    </div>
                </a>
            </div>

            <div class="one">
                <a class="category_img" category="Paseos Náuticos">
                    <img class="foto" src="/img/icono-4.png" alt="Paseos Náuticos">
                    <div class="overlay overlayFade">
                        <div class="text-over">Paseos Náuticos</div>
                    </div>
                </a>
            </div>
        </div>
    </section>

    <section class="prueba" id="">
        <div class="div-filtro">
            <h2 class="centrado texto-blanco">SERVICIOS Y ATRACTIVOS</h2>
            <div class="dropdown">
                <div class="select_style">
                    <select id="mySelect">
                        <option class="category_item" value="Todos">Tipo de servicio (Todos)</option>
                        <option class="category_item" value="Atractivos">Atractivos (Todos)</option>
                        <% for(var i=0; i < dataCategoria.length; i++) { %>
                        <option class="category_item" value="<%= dataCategoria[i].nombre_cat %>" ><%= dataCategoria[i].nombre_cat %></option>
                        <% } %>
                    </select>
                </div>
            
                <div class="select_style">
                    <select id="mySelectDos">
                        <option class="category_item_dos" value="Todos">Subtipo de servicio (Todos)</option>
                        <% for(var i=0; i < dataSubcategoria.length; i++) { %>
                        <option class="category_item_dos" all="all" category="<%= dataSubcategoria[i].nombre_cat %>" value="<%= dataSubcategoria[i].nombre_subcat %>" ><%= dataSubcategoria[i].nombre_subcat %></option>
                        <% } %>
                    </select>
                </div>
                
            </div>
        </div>
    </section>

    <section class="products-list" >
        <div class="cont-serv">
            
            <% var cont=0;%>
                <% if (dataServicio) { %>
                    <div class="row">
                    <% for(var i=0; i < dataServicio.length; i++) { %>
                            <% cont=1;%>
                            <% if (dataServicio[i].solicitud == 1) { %>
                                <div class="col-individual" all="all" category="<%= dataServicio[i].nombre_cat %>">
                                    <div class="contex">
                                        <div class="cont-serv">
                                            <h3 class="centrado texto-ng">
                                                <%= dataServicio[i].titulo %>
                                            </h3>
                                        </div>
                                        <div class="divisor">
                                            <div class="divisor-linea"></div>
                                        </div>
                                        <div class="img-div" data-target="">
                                            <a href="/servicio/<%= dataServicio[i].id_servicio%>"><img class="img-cont" src="/img/<%= dataServicio[i].img || 'default.png'%>" /></a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                    <% } %>
                <% } %>
                
                
                </div>
                <% if (cont==1) { %>
                    <h4 id="msj" class="centrado texto-ng text-h4">Lo sentimos, no hay publicaciones disponibles.</a></h4>
                <% } %>
        </div>
    
    </section>

    

    <!-- JS -->
    <script src="js/navegador.js"></script>

    <script>
        $(document).ready(function(){

            //msj cuando no hay publicaciones
            $('#msj').hide();

            $('#mySelectDos option[all="all"]').hide();

            // combobox y servicios
            $('#mySelect').on('change', function() {
                
                var value = $(this).val();
                //var Todos =   $("#mySelect option[value='Todos']").attr("selected", true);
                
                // console.log(value);

                $('#mySelectDos option[all="all"]').hide();
                $('#mySelectDos option[category="' + value + '"]').show();

                if ($(this).val() === 'Atractivos') {
                        function showAll() {
                            $('#mySelectDos').hide();
                        } setTimeout(showAll, 100);
                }else{
                    $('#mySelectDos').show();
                }

                // OCULTAR PRODUCTO
                $('.col-individual').css('transform', 'scale(0)');
                function hideProduct() {
                    $('.col-individual').hide();
                } setTimeout(hideProduct, 100);
                
                //Mostrar Producto
                function showProduct() {
                        $('.col-individual[category="' + value + '"]').show();
                        $('.col-individual[category="' + value + '"]').css('transform', 'scale(1)');
                    
                    
                } setTimeout(showProduct, 100);

                // TODOS
                if ($(this).val() === 'Todos') {
                        function showAll() {
                            $('#mySelectDos option[all="all"]').hide();
                            $('.col-individual[all="all"]').show();
                            $('.col-individual').css('transform', 'scale(1)');
                        } setTimeout(showAll, 100);
                }

                // if ($('.col-individual[category="' + value + '"]').length > 0){
                //         $('#msj').hide();
                // }else{
                    
                //     if($('.col-individual[all="all"]').length >   0){
                //         $('#msj').hide();
                //         alert("asd");
                //     }else{
                //         alert("XD");
                //         $('#msj').show();   
                //     }
                    
                // }
            });

        });

    </script>

